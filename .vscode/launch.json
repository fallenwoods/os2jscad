{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

    {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Chrome",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Launch Node",
        "program": "${file}"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Build examples",
        "args": ["-e","js","examples/*.scad"],
        "program": "${workspaceFolder}/os2jscadMain.js"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Run Mocha Tests",
        "args": ["tests/test.js"],
        "program": "${workspaceFolder}/node_modules/mocha/bin/mocha"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Include Test",
        "args": ["-e","js","-i","tests/includeTest/main.scad"],
        "program": "${workspaceFolder}/os2jscadMain.js"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Sample",
        "args": ["-e","js","examples/sample.scad"],
        "program": "${workspaceFolder}/os2jscadMain.js"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Sample w Stubs",
        "args": ["-e","js","-s","examples/sample.scad"],
        "program": "${workspaceFolder}/os2jscadMain.js"
    },
    {
        "type": "node",
        "request": "launch",
        "name": "Launch output.js",
        "program": "${workspaceFolder}/output.js"
    }
    ]
}